# OpenAI API Key (required for embeddings and LLM if using OpenAI)
OPENAI_API_KEY=sk-...

# LLM Provider (openai or ollama)
RYUMEM_LLM_PROVIDER=openai

# LLM Model
# For OpenAI: gpt-4o-mini, gpt-4, gpt-3.5-turbo
# For Ollama: llama3.2:3b, qwen2.5:7b, mistral:7b
RYUMEM_LLM_MODEL=gpt-4o-mini

# Ollama Base URL (only needed if using Ollama)
RYUMEM_OLLAMA_BASE_URL=http://localhost:11434

# Database Path
RYUMEM_DB_PATH=./data/ryumem_server.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Server Configuration
HOST=0.0.0.0
PORT=8000

